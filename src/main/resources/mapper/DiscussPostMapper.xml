<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fct.nowcoder.dao.DiscussPostMapper">
    <sql id="selectFields">
        id,user_id,title,content,type,status,create_time,comment_count,score
    </sql>

    <resultMap id="discussType" type="discussPost">
        <result column="user_id" property="userId"/>
        <result column="create_time" property="createTime"/>
        <result column="comment_count" property="commentCount"/>
    </resultMap>

    <select id="selectDiscussPost" resultMap="discussType">
        SELECT <include refid="selectFields"></include>
        FROM discuss_post
        WHERE status != 2
        <if test="userId != 0">
        and  user_id = #{userId}
        </if>
        ORDER BY type DESC,create_time DESC
        LIMIT #{offset},#{limit};
    </select>
    <select id="selectCountDiscussPost" resultType="java.lang.Integer">
        SELECT COUNT(id)
        FROM discuss_post
        WHERE status != 2
        <if test="userId != 0">
            and user_id = #{userId};
        </if>
    </select>
<!--    -->

</mapper>